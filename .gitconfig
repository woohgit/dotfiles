[push]
  default = tracking
[pull]
	rebase = true
[rebase]
	autostash = true
[alias]
	st = status
	co = checkout
	up = pull
	l = log -p
	p = push
	pf = push -f
  undo-commit = reset --soft HEAD^
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[merge]
  tool = opendiff
[diff]
  tool = opendiff
[commit]
  gpgsign = true
[core]
	editor = vim
	whitespace = trailing-space,space-before-tab
[help]
	autocorrect = 1
